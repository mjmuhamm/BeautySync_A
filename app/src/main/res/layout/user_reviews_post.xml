<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/initial_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item_type_and_title"
            android:layout_width="245dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="9dp"
            android:textSize="11sp"
            android:textColor="@color/main"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/beautician"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_type_and_title"
            android:layout_marginStart="9dp"
            android:textSize="11sp"
            android:textColor="@color/main"
            android:layout_marginTop="4dp"/>


    <TextView
        android:id="@+id/order_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray400"
        android:textSize="11sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="4dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/name_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:background="@color/gray300" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="horizontal"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_profile" />




        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/review"
                    android:layout_width="290dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/main"
                    android:textSize="11sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="7dp"
                    android:text="@string/does_the_user_recommend"
                    android:textStyle="bold"
                    android:textColor="@color/main"
                    android:textSize="11sp" />

                    <TextView
                        android:id="@+id/recommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="7dp"
                        android:layout_marginTop="7dp"
                        android:textColor="@color/main"
                        android:textSize="11sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/expectations_met"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/main"
                            android:textSize="11sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.5dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:contentDescription="@string/expectations_met"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/star_filled"/>

                            <TextView
                                android:id="@+id/expectations_met"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="11sp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quality"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/main"
                            android:textSize="11sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.5dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:contentDescription="@string/quality"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/star_filled"/>

                            <TextView
                                android:id="@+id/quality_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="11sp"/>

                        </LinearLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/beautician_rating"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/main"
                            android:textSize="11sp"
                            android:textStyle="bold"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.5dp"
                            android:layout_gravity="center_horizontal"
                            android:orientation="horizontal"
                            tools:ignore="UseCompoundDrawables">

                            <ImageView
                                android:layout_width="21dp"
                                android:layout_height="21dp"
                                android:contentDescription="@string/beautician_rating"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/star_filled"/>

                            <TextView
                                android:id="@+id/beautician_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/main"
                                android:layout_marginStart="5dp"
                                android:layout_gravity="center_vertical"
                                android:textSize="11sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/like_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap,UseCompoundDrawables">


                <ImageView
                    android:id="@+id/like_image"
                    android:layout_width="26dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_height="26dp"
                    android:contentDescription="@string/item_likes"
                    android:src="@drawable/heart_unfilled"/>

                <TextView
                    android:id="@+id/like_text"
                    android:layout_width="wrap_content"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/main"
                    android:textSize="11sp"
                    android:layout_marginTop="1dp"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="normal"/>


            </LinearLayout>

        </RelativeLayout>






    </LinearLayout>


</LinearLayout>