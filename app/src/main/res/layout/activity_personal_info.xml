<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.info.PersonalInfo">


    <RelativeLayout
        android:id="@+id/initial_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/personal_info"
            android:textColor="@color/main"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/user_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="30dp"
                    android:src="@drawable/default_profile" />


                <ImageView
                    android:id="@+id/edit_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="45dp"
                    android:layout_marginTop="21dp"
                    android:contentDescription="@string/edit_image"
                    android:padding="10dp"
                    android:src="@drawable/edit_image_camera" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="30dp"
                    android:orientation="vertical"
                    tools:ignore="RelativeOverlap">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/full_name"
                        android:textColor="@color/main"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/full_name"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_input"
                        android:hint="@string/full_name"
                        android:importantForAutofill="no"
                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

            </RelativeLayout>

            <View
                android:id="@+id/name_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/name_layout"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"
                android:background="@color/gray300" />

            <LinearLayout
                android:id="@+id/user_name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_view"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/username"
                    android:textColor="@color/main"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/username_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/change"
                    android:visibility="gone"
                    android:textAllCaps="false"
                    app:cornerRadius="1dp"
                    android:layout_marginStart="20dp"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/main"
                    />

                </LinearLayout>

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/username"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/main"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_below="@id/user_name_layout"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:orientation="vertical"
                tools:ignore="RelativeOverlap">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textColor="@color/main"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/email_change"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        app:cornerRadius="1dp"
                        android:layout_marginStart="20dp"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/main"
                        />

                </LinearLayout>

                <EditText
                    android:id="@+id/email"
                    android:layout_width="200dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/email"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/main"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/password_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="9dp"
                android:layout_below="@id/email_layout"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    tools:ignore="RelativeOverlap">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/password"
                        android:textColor="@color/main"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/password_change"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/change"
                            android:visibility="gone"
                            android:textAllCaps="false"
                            app:cornerRadius="1dp"
                            android:layout_marginStart="20dp"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/main"
                            />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/password"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_input"
                        android:hint="@string/password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/confirm_password"
                        android:layout_width="200dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/custom_input"
                        android:hint="@string/confirm_password"
                        android:importantForAutofill="no"
                        android:inputType="textPassword"
                        android:padding="10dp"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/password_configuration"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="11sp"
                    android:textAlignment="center"
                    android:textColor="@color/gray400"/>

            </LinearLayout>

            <View
                android:id="@+id/user_name_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/password_layout"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="7dp"
                android:background="@color/gray300" />

            <LinearLayout
                android:id="@+id/looking_for"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="9dp"
                android:layout_below="@id/user_name_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/looking_for_text"
                    android:textColor="@color/main"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/looking_for_text"
                    android:layout_width="360dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_input"
                    android:hint="@string/looking_for_text"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/main"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/looking_for_view"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/looking_for"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="7dp"
                android:background="@color/gray300" />



            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/looking_for_view"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/beautician_location_default"
                    android:textColor="@color/main"
                    android:layout_marginEnd="10dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/local"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/secondary"
                        android:text="@string/local"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:cornerRadius="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/region"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="@string/region"
                        android:textAllCaps="false"
                        android:textColor="@color/main"
                        android:textSize="12sp"
                        app:cornerRadius="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/white"
                        android:text="@string/nation"
                        android:textAllCaps="false"
                        android:textColor="@color/main"
                        android:textSize="12sp"
                        app:cornerRadius="1dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/city_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/city"
                        android:layout_width="170dp"
                        android:layout_height="46dp"
                        android:background="@drawable/custom_input"
                        android:hint="@string/city"
                        android:layout_marginEnd="8dp"
                        android:importantForAutofill="no"
                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:textColor="@color/main"
                        android:textSize="12sp" />


                    <EditText
                        android:id="@+id/state"
                        android:layout_width="90dp"
                        android:layout_height="46dp"
                        android:background="@drawable/custom_input"
                        android:hint="@string/state"
                        android:importantForAutofill="no"
                        android:inputType="textCapSentences"
                        android:padding="10dp"
                        android:textColor="@color/main"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/location_layout"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:text="@string/save"
                android:layout_marginBottom="25dp"
                android:textAllCaps="false"
                android:textColor="@color/main"
                android:textSize="14sp"
                app:cornerRadius="1dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:visibility="gone"
                android:layout_centerInParent="true" />

        </RelativeLayout>

    </ScrollView>


</LinearLayout>
