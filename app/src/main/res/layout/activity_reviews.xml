<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".user.misc.Reviews">


    <RelativeLayout
        android:id="@+id/initial_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">


        <ImageView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/back_arrow"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/user_review"
            android:textColor="@color/main"
            android:textSize="17sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/name_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="7dp"
        android:background="@color/gray300" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:textColor="@color/main" />

    <TextView
        android:id="@+id/item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:layout_gravity="center"
        android:layout_marginTop="9dp"
        android:textColor="@color/main" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/did_this_experience_meet_your_expectation"
        android:textColor="@color/main"
        android:textStyle="bold"
        android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/expectations_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/expectations_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/expectations_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/expectations_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/expectations_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_was_the_quality_of_the_service"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/quality_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/quality_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/quality_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/quality_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/quality_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/what_would_you_rate_this_beautician"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/beautician_rating_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/beautician_rating_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/beautician_rating_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/beautician_rating_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

            <ImageView
                android:id="@+id/beautician_rating_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:contentDescription="@string/expectations_met"
                android:layout_gravity="center_vertical"
                android:src="@drawable/star_unfilled"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/did_this_experience_meet_your_expectation"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/experience_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yes"
                android:backgroundTint="@color/secondary"
                app:cornerRadius="1dp"
                android:textAllCaps="false"
                android:layout_marginTop="4dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/experience_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/no"
                app:cornerRadius="1dp"
                android:textColor="@color/main"
                android:backgroundTint="@color/white"
                android:textAllCaps="false"
                android:layout_marginTop="4dp"/>

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/any_thoughts_you_d_like_to_share_with_the_beautician"
            android:textColor="@color/main"
            android:textStyle="bold"
            android:textSize="13sp"/>

        <EditText
            android:id="@+id/thoughts"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/custom_input"
            android:hint="@string/any_thoughts_you_d_like_to_share_with_the_beautician"
            android:importantForAutofill="no"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/main"
            android:textSize="12sp" />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        app:cornerRadius="1dp"
        android:textAllCaps="false"
        android:layout_gravity="end"
        android:backgroundTint="@color/main"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="25dp"/>


        </LinearLayout>

    </ScrollView>


</LinearLayout>